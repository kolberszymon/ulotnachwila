<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Ulotna chwila</title>
    <base href="/admin">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" type="text/scss" href="./assets/styles.scss">
</head>

<body>
    <div class="admin-add">
        <h1>Dodawanie sztuki</h1>
        <form>
            <input type="text" id="title" name="title" placeholder="Tytuł sztuki"/>  
            Wybierz datę: 
            <input type="date" id="play-date" name="play-date">
            Wybierz godzinę: 
            <input type="time" name="usr_time">
            <input type="submit" value="Dodaj">  
        </form>
    </div>
    <div class="admin-update">
        <h1>Aktualizacja sztuki</h1>
        <form>
            <select name="plays">
                <% plays.forEach(function(play){ %>
                    <option id="<%= play.id %>"><%= play.nazwa %></option>
                <% }); %>
            </select>
            <input type="text" id="title" name="title" placeholder="Nowy tytuł sztuki" />  
            Wybierz datę:
            <input type="date" id="play-date" name="play-date">
            Wybierz godzine: 
            <input type="time" name="usr_time">
            <input type="submit" value="Zatwierdz zmiany">      
        </form>
    </div>
    <div class="admin-delete">
        <h1>Usuwanie sztuki</h1>
        <form>
            <select name="plays">
                <option id="1" value="makbet">Makbet</option>
                <option id="2" value="hamlet">Hamlet</option>
                <option id="3" value="romeo">Romeo i Julia</option>
                <option id="4" value="ogrod">Tajemniczy ogród</option>
            </select>
            <input type="submit" value="Zatwierdz zmiany">    
        </form>
    </div>
</body>

</html>
